<%= form_with url: user_ships_path, model: ship do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% ship.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :capacity %><br>
    <%= form.select :capacity, [10, 15, 20, 30], selected: 10 %><br>
  </div>

  <div>
    <%= form.submit %>
  </div>

<% end %>